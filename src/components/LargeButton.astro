---
import { ArrowRight } from '@lucide/astro'
const { 
  label, 
  fontSize = 'text-lg', 
  bg = 'bg-focus', 
  border = 'border-none' 
} = Astro.props;
---

<button class={`flex items-stretch gap-3 w-72 group hover:translate-x-2 transition-all duration-200 ${fontSize}`}>
  <span class={`flex w-full justify-center items-center text-fg font-bold italic rounded-full ${bg} ${border}`}>{label}</span>
  <span class={`flex items-center justify-center p-3 text-fg rounded-full ${bg} ${border}`}><ArrowRight class="size-[1em] transition-transform group-hover:-rotate-45" /></span>
</button>
